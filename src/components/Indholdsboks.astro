---
import '../style.css'
---



<div class="indholdsboksparent">
    <slot/>
</div>


<style>
/* Mobile */
.indholdsboksparent {
    background-color: var(--bright-white);
    margin: 0 auto;
    padding: 20px;
    filter: drop-shadow(0 0 0.4rem rgba(0, 0, 0, 0.250));
    align-items: center;
    position: relative;
    top: -100px;
}
/* Desktop */
@media (min-width: 750px) {

.indholdsboksparent {
    background-color: var(--bright-white);
    margin: 0 auto;
    padding: 60px;
    filter: drop-shadow(0 0 0.4rem rgba(0, 0, 0, 0.250));
    width: clamp(1200px, 75%, 1600px);
    align-items: center;
    position: relative;
    top: -100px;
}

}
/* Desktop responive */
@media (max-width: 1600px) and (min-width: 460px) {
        .indholdsboksparent {
            max-width: 1200px;
        }
}       
    @media (min-width: 1600px) {
        .indholdsboksparent {
            max-width: 1450px;

        }
    }




</style>