---
interface Props {
	title: string;
	body: string;
	href: string;
}
 
//const { href, title, body } = Astro.props;
---

<li class="link-card">
	<div class="img-container">
		<img class="image" src="/billede.png" alt="">
		<p class="body">
			Lorem ipsum dolor sit amet, consectetur adipiscing elit. Phasellus in lobortis nunc, id posuere mauris. Sed vel risus vitae ante tincidunt cursus eu et eros. Cras laoreet nisi at est semper posuere.
		</p>
		<div class="overlay"></div>
	</div>
	<div class="text-box">
		<h2>Navn</h2>
		<p>Titel</p>
	</div>
</li>
<style>
	.link-card {
		position: relative;
		width: 300px;
		height: 395px;
		list-style: none;
		overflow: hidden;
		border-radius: 12px;
		box-shadow: 1px 4px 4px 0px rgba(0, 0, 0, 0.25);
		cursor: pointer;
	}
	.link-card:hover {
		box-shadow:  0px 4px 4px 2px rgba(0, 0, 0, 0.75);

	}
	.img-container {
		position: absolute;
		height: 75%;
		width: 100%;
	}
	.image {
		position: absolute;
		background-color: var(--main-blue);
		height: 100%;
		width: 100%;
		z-index: 2;
		bottom: 0;
		transition: all 400ms ease;
	}
	.overlay {
		position: absolute;
		height: 20%;
		width: 100%;
		background: linear-gradient(180deg, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 100%);
		z-index: 3;
		bottom: 0;
		transition: all 400ms ease;
	}
	.overlay.is-active, .image.is-active{
		bottom: 115px;
	}

	.body {
		top: 60%;
		position: absolute;
		font-size: 0.9rem;
		padding: 10px;
		font-weight: 400;
		color: var(--main-blue);
	}
	.text-box {
		position: absolute;
		height: 80px;
		width: 100%;
		bottom: 0;
		padding: 15px;

	}
	.text-box p {
		font-weight: 200;
		color: var(--main-blue);
	}
</style>

<script>
	window.onload = function() {
		const card = document.querySelector('.link-card');
		const img = document.querySelector('.image');
    	const overlay = document.querySelector('.overlay');
    		card.addEventListener('click', function(){
			img.classList.toggle('is-active')
        	card.classList.toggle('is-active')
        	overlay.classList.toggle('is-active')
			
    	});
	}
</script>
